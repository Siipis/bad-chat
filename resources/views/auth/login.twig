layout: default
title: "{{ appName }}"

===

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h3>Welcome to {{ appName }}</h3>

        {% partial 'alert' %}

        {% partial 'form/login' with {'url': '/'} %}

        <hr/>

        <h4 class="text-center" style="line-height: 2em;">
            {% if online is empty %}
                Someone else was here {{ lastVisit }}!
            {% else %}
                Currently {{ online|length }} {{ str_plural('person', online|length) }} online:
                {% for login in online %}{{ login.user.name }}{% if not loop.last %}, {% endif %}{% endfor %}.
            {% endif %}
        </h4>

        <hr/>

        <p class="text-center">
            <a href="{{ url('account') }}" class="btn btn-link btn-lg">
                <i class="glyphicon glyphicon-home"></i>
                Account Panel
            </a>
        </p>
    </div>
</div>