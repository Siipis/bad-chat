layout: account
title: "{{ appName }}: Message members"

===

<div class="container-fluid">
    <h3>Message members</h3>

    <form class="form-horizontal col-xs-9" action="{{ url('users/message') }}" method="post">
        {% partial 'alert' %}

        {{ csrf_field() }}

        <div class="form-group{{ errors.has('title') ? ' has-error' : '' }}">
            <label for="inputTitle">Title</label>
            <input type="text" name="title" class="form-control" id="inputTitle" value="{{ old('title') }}"
                   placeholder="Title"/>

            {% if errors.has('title') %}
                <span class="help-block">
                <strong>{{ errors.first('title') }}</strong>
            </span>
            {% endif %}
        </div>

        <div class="form-group{{ errors.has('message') ? ' has-error' : '' }}">
            <label for="inputMessage">Message</label>
            <textarea type="text" name="message" class="form-control" id="inputMessage" placeholder="Message"
                      rows="10">{{ old('message') }}</textarea>

            {% if errors.has('message') %}
                <span class="help-block">
                <strong>{{ errors.first('message') }}</strong>
            </span>
            {% endif %}
        </div>

        <div class="form-group">
            <button class="btn btn-default" data-confirmation="send">Email everyone!</button>
        </div>
    </form>
</div>

<hr/>

<a href="{{ url('users') }}" class="text-larger">
    &laquo; Previous
</a>